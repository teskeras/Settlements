@{
    ViewData["Title"] = "Settlements";
}

<div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal" data-id="addSettlement">
        Add new settlement
    </button>
    <br /><br />
    <div class="">
        <table class="table" id="settlementsTable">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Postal Code
                    </th>
                    <th>
                        Country
                    </th>
                </tr>
            </thead>
        </table>
        <div class="float-sm-right">
            <p id="totalCount"></p>
        </div>
        <label for="paging">Items per page: </label>
        <select name="paging" id="paging">
            <option value=10 selected>10</option>
            <option value=25>25</option>
            <option value=50>50</option>
        </select>
        <button type="button" class="btn btn-info" id="previousPage" disabled>Previous page</button>
        <button type="button" class="btn btn-info" id="nextPage" disabled>Next page</button>
    </div>
</div>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" novalidate>
                <div class="modal-body">
                        <div class="form-group">
                            <label for="settlementNameInput">Settlement name:</label>
                            <input type="text" class="form-control" id="settlementName" required/>
                        </div>
                        <div class="form-group">
                            <label for="postalCodeInput">Postal code:</label>
                            <input type="text" class="form-control" id="postalCode" required/>
                        </div>
                        <div class="form-group" id="countriesDiv">
                            <label for="countryNameInput">Country name:</label>
                            <input list="countries" class="form-control" id="countryName" required/>
                            <datalist id="countries">
                            </datalist>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="deleteSettlement">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelModal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveModal">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
